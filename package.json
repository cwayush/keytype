{
  "name": "keytype",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "db:setup": "cd packages/db && npm run db:setup",
    "prisma:generate": "cd packages/db && npm run db:generate",
    "postinstall": "npm run prisma:generate",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.5.6",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "frontend",
    "packages/*"
  ]
}
