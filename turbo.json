{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",  
        "../packages/db/node_modules/.prisma/**"
      ],
      "env": [
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "FRONTEND_URL",
        "NEXT_PUBLIC_FRONTEND_URL",
        "NEXT_PUBLIC_WS_URL",
        "VERIFIED_SENDER",
        "REDIS_URL",
        "RESEND_API_KEY",
        "DATABASE_URL",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {}
  }
}
